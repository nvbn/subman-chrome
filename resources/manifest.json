{
    "name": "subman.io for chrome",
    "description": "Search subtitles faster",
    "version": "0.1",
    "permissions": ["contextMenus", "tabs", "*://eztv.it/*", "*://subman.io/*", "*://thepiratebay.se/*"],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://eztv.it/*", "*://thepiratebay.se/*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
      "16": "icon_16_16.png",
      "48": "icon_48_48.png",
      "128": "icon_128_128.png"
    },
    "manifest_version": 2
}
