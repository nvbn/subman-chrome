{
  "name": "subman.io for chrome",
  "description": "Search subtitles faster",
  "version": "0.4",
  "permissions": [
    "contextMenus",
    "tabs",
    "*://subman.io/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://eztv.it/*",
        "*://thepiratebay.se/*",
        "*://subman.io/*",
        "*://thepiratebay.cr/*",
        "*://kickass.so/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon_16_16.png",
    "48": "icon_48_48.png",
    "128": "icon_128_128.png"
  },
  "page_action": {
    "default_icon": {
      "48": "icon_48_48.png"
    },
    "default_title": "Right click on link to episode for seeing subtitles."
  },
  "manifest_version": 2
}
